#!/bin/bash

#Fingli written by alireza.amirsamimi@gmail.com & https://github.com/alireaza & fzero@rubi.gd
#Fingil Version 1.00

convert () {
    text=$@ #get arguments and set to variable
    out="" #set variable

    for i in $(seq 0 $((${#text} - 1))); do #split charactor
        hex=$(echo "${text:$i:1}" | xxd -p) #convert ASCII to HEX

        case "$hex" in #convert HEXs
            "220a") #"
                out="d89b0a" #؛
            ;;
            "230a") ##
                out="d9ab0a" #٫
            ;;
            "240a") #$
                out="efb7bc0a" #﷼
            ;;
            "250a") #%
                out="d9aa0a" #٪
            ;;
            "260a") #&
                out="d88c0a" #،
            ;;
            "270a") #'
                out="daaf0a" #گ
            ;;
            "280a") #(
                out="290a" #)
            ;;
            "290a") #)
                out="280a" #(
            ;;
            "2c0a") #,
                out="d9880a" #و
            ;;
            "300a") #0
                out="dbb00a" #۰
            ;;
            "310a") #1
                out="dbb10a" #۱
            ;;
            "320a") #2
                out="dbb20a" #۲
            ;;
            "330a") #3
                out="dbb30a" #۳
            ;;
            "340a") #4
                out="dbb40a" #۴
            ;;
            "350a") #5
                out="dbb50a" #۵
            ;;
            "360a") #6
                out="dbb60a" #۶
            ;;
            "370a") #7
                out="dbb70a" #۷
            ;;
            "380a") #8
                out="dbb80a" #۸
            ;;
            "390a") #9
                out="dbb90a" #۹
            ;;
            "3b0a") #;
                out="daa90a" #ک
            ;;
            "3c0a") #<
                out="3e0a" #>
            ;;
            "3e0a") #>
                out="3c0a" #<
            ;;
            "3f0a") #?
                out="d89f0a" #؟
            ;;
            "410a") #A
                out="d8a40a" #ؤ
            ;;
            "420a") #B
                out="e2808c0a" # نیم فاصله
            ;;
            "430a") #C
                out="da980a" #ژ
            ;;
            "440a") #D
                out="d98a0a" #ي
            ;;
            "450a") #E
                out="d98d0a" #ٍ
            ;;
            "460a") #F
                out="d8a50a" #إ
            ;;
            "470a") #G
                out="d8a30a" #أ
            ;;
            "480a") #H
                out="d8a20a" #آ
            ;;
            "490a") #I
                out="d9910a" #ّ
            ;;
            "4a0a") #J
                out="d8a90a" #ة
            ;;
            "4b0a") #K
                out="c2bb0a" #»
            ;;
            "4c0a") #L
                out="c2ab0a" #«
            ;;
            "4d0a") #M
                out="d8a10a" #ء
            ;;
            "4e0a") #N
                out="d9940a" #ٔ
            ;;
            "4f0a") #O
                out="5d0a" #]
            ;;
            "500a") #P
                out="5b0a" #[
            ;;
            "510a") #Q
                out="d9920a" #ْ
            ;;
            "520a") #R
                out="d98b0a" #ً
            ;;
            "530a") #S
                out="d8a60a" #ئ
            ;;
            "540a") #T
                out="d98f0a" #ُ
            ;;
            "550a") #U
                out="d98e0a" #َ
            ;;
            "560a") #V
                out="d9b00a" #ٰ
            ;;
            "570a") #W
                out="d98c0a" #ٌ
            ;;
            "580a") #X
                out="d9930a" #ٓ
            ;;
            "590a") #Y
                out="d9900a" #ِ
            ;;
            "5a0a") #Z
                out="d9830a" #ك
            ;;
            "5b0a") #[
                out="d8ac0a" #ج
            ;;
            "5d0a") #]
                out="da860a" #چ
            ;;
            "5e0a") #^
                out="c3970a" #×
            ;;
            "5f0a") #_
                out="d9800a" #ـ
            ;;
            "600a") #`
                out="e2808d0a" #فاصله چسبان
            ;;
            "610a") #a
                out="d8b40a" #ش
            ;;
            "620a") #b
                out="d8b00a" #ذ
            ;;
            "630a") #c
                out="d8b20a" #ز
            ;;
            "640a") #d
                out="db8c0a" #ی
            ;;
            "650a") #e
                out="d8ab0a" #ث
            ;;
            "660a") #f
                out="d8a80a" #ب
            ;;
            "670a") #g
                out="d9840a" #ل
            ;;
            "680a") #h
                out="d8a70a" #ا
            ;;
            "690a") #i
                out="d9870a" #ه
            ;;
            "6a0a") #j
                out="d8aa0a" #ت
            ;;
            "6b0a") #k
                out="d9860a" #ن
            ;;
            "6c0a") #l
                out="d9850a" #م
            ;;
            "6d0a") #m
                out="d9be0a" #پ
            ;;
            "6e0a") #n
                out="d8af0a" #ن
            ;;
            "6f0a") #o
                out="d8ae0a" #خ
            ;;
            "700a") #p
                out="d8ad0a" #ح
            ;;
            "710a") #q
                out="d8b60a" #ض
            ;;
            "720a") #r
                out="d9820a" #ق
            ;;
            "730a") #s
                out="d8b30a" #س
            ;;
            "740a") #t
                out="d9810a" #ف
            ;;
            "750a") #u
                out="d8b90a" #ع
            ;;
            "760a") #v
                out="d8b10a" #ر
            ;;
            "770a") #w
                out="d8b50a" #ص
            ;;
            "780a") #x
                out="d8b70a" #ط
            ;;
            "790a") #y
                out="d8ba0a" #غ
            ;;
            "7a0a") #z
                out="d8b80a" #ظ
            ;;
            "7b0a") #{
                out="7d0a" #}
            ;;
            "7d0a") #}
                out="7b0a" #{
            ;;
            "7e0a") #~
                out="c3b70a" #÷
            ;;
            "d89b0a") #؛
                out="220a" #"
            ;;
            "d9ab0a") #٫
                out="230a" ##
            ;;
            "efb7bc0a") #﷼
                out="240a" #$
            ;;
            "d9aa0a") #٪
                out="250a" #%
            ;;
            "d88c0a") #،
                out="260a" #&
            ;;
            "daaf0a") #گ
                out="270a" #'
            ;;
            "d9880a") #و
                out="2c0a" #,
            ;;
            "dbb00a") #۰
                out="300a" #0
            ;;
            "dbb10a") #۱
                out="310a" #1
            ;;
            "dbb20a") #۲
                out="320a" #2
            ;;
            "dbb30a") #۳
                out="330a" #3
            ;;
            "dbb40a") #۴
                out="340a" #4
            ;;
            "dbb50a") #۵
                out="350a" #5
            ;;
            "dbb60a") #۶
                out="360a" #6
            ;;
            "dbb70a") #۷
                out="370a" #7
            ;;
            "dbb80a") #۸
                out="380a" #8
            ;;
            "dbb90a") #۹
                out="390a" #9
            ;;
            "daa90a") #ک
                out="3b0a" #;
            ;;
            "d89f0a") #؟
                out="3f0a" #?
            ;;
            "d8a40a") #ؤ
                out="410a" #A
            ;;
            "e2808c0a") # نیم فاصله
                out="420a" #B
            ;;
            "da980a") #ژ
                out="430a" #C
            ;;
            "d98a0a") #ي
                out="440a" #D
            ;;
            "d98d0a") #ٍ
                out="450a" #E
            ;;
            "d8a50a") #إ
                out="460a" #F
            ;;
            "d8a30a") #أ
                out="470a" #G
            ;;
            "d8a20a") #آ
                out="480a" #H
            ;;
            "d9910a") #ّ
                out="490a" #I
            ;;
            "d8a90a") #ة
                out="4a0a" #J
            ;;
            "c2bb0a") #»
                out="4b0a" #K
            ;;
            "c2ab0a") #«
                out="4c0a" #L
            ;;
            "d8a10a") #ء
                out="4d0a" #M
            ;;
            "d9940a") #ٔ
                out="4e0a" #N
            ;;
            "5d0a") #]
                out="4f0a" #O
            ;;
            "5b0a") #[
                out="500a" #P
            ;;
            "d9920a") #ْ
                out="510a" #Q
            ;;
            "d98b0a") #ً
                out="520a" #R
            ;;
            "d8a60a") #ئ
                out="530a" #S
            ;;
            "d98f0a") #ُ
                out="540a" #T
            ;;
            "d98e0a") #َ
                out="550a" #U
            ;;
            "d9b00a") #ٰ
                out="560a" #V
            ;;
            "d98c0a") #ٌ
                out="570a" #W
            ;;
            "d9930a") #ٓ
                out="580a" #X
            ;;
            "d9900a") #ِ
                out="590a" #Y
            ;;
            "d9830a") #ك
                out="5a0a" #Z
            ;;
            "d8ac0a") #ج
                out="5b0a" #[
            ;;
            "da860a") #چ
                out="5d0a" #]
            ;;
            "c3970a") #×
                out="5e0a" #^
            ;;
            "d9800a") #ـ
                out="5f0a" #_
            ;;
            "e2808d0a") #فاصله چسبان
                out="600a" #`
            ;;
            "d8b40a") #ش
                out="610a" #a
            ;;
            "d8b00a") #ذ
                out="620a" #b
            ;;
            "d8b20a") #ز
                out="630a" #c
            ;;
            "db8c0a") #ی
                out="640a" #d
            ;;
            "d8ab0a") #ث
                out="650a" #e
            ;;
            "d8a80a") #ب
                out="660a" #f
            ;;
            "d9840a") #ل
                out="670a" #g
            ;;
            "d8a70a") #ا
                out="680a" #h
            ;;
            "d9870a") #ه
                out="690a" #i
            ;;
            "d8aa0a") #ت
                out="6a0a" #j
            ;;
            "d9860a") #ن
                out="6b0a" #k
            ;;
            "d9850a") #م
                out="6c0a" #l
            ;;
            "d9be0a") #پ
                out="6d0a" #m
            ;;
            "d8af0a") #ن
                out="6e0a" #n
            ;;
            "d8ae0a") #خ
                out="6f0a" #o
            ;;
            "d8ad0a") #ح
                out="700a" #p
            ;;
            "d8b60a") #ض
                out="710a" #q
            ;;
            "d9820a") #ق
                out="720a" #r
            ;;
            "d8b30a") #س
                out="730a" #s
            ;;
            "d9810a") #ف
                out="740a" #t
            ;;
            "d8b90a") #ع
                out="750a" #u
            ;;
            "d8b10a") #ر
                out="760a" #v
            ;;
            "d8b50a") #ص
                out="770a" #w
            ;;
            "d8b70a") #ط
                out="780a" #x
            ;;
            "d8ba0a") #غ
                out="790a" #y
            ;;
            "d8b80a") #ظ
                out="7a0a" #z
            ;;
            "c3b70a") #÷
                out="7e0a" #~
            ;;
            *)
                out="${hex}"
            ;;
        esac

        out=$(echo "$out" | xxd -p -r) #convert HEX to ACSII
        echo -ne "$out"\\r #return out variable
    done
}

window_pid=$(xdotool getactivewindow) #get active window PID
clipboard=$(xclip -o -sel clip ) #copy clipboard

xdotool type --delay 400 --window $window_pid "$(convert $clipboard)"

exit
